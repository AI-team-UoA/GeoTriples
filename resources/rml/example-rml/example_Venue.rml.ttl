#Mappings for Venue.json: 
#<#VenueMapping>

@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix mail: <http://example.com/mail#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.example.com/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix transit: <http://vocab.org/transit/terms/> .
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#>.
@prefix schema: <http://schema.org/>.
@prefix gn: <http://www.geonames.org/ontology#>.
@prefix geosp: <http://www.telegraphis.net/ontology/geography/geography#> .
@prefix rrx: <http://www.w3.org/ns/r2rml-ext#>.
@prefix rrxf: <http://www.w3.org/ns/r2rml-ext/functions/def/>.
@prefix ogc: <http://www.opengis.net/ont/geosparql#>.

<#VenueMapping>
    rml:logicalSource [
      rml:source "../resources/rml/example-rml/Venue4.json";
      rml:referenceFormulation ql:JSONPath;
      rml:iterator "$";
    ];
    rr:subjectMap [
     rr:template "http://loc.example.com/city/{city}";
     rr:class schema:City 
    ];
    
    rr:predicateObjectMap 
  [
    rr:predicate wgs84_pos:lat;
    rr:objectMap 
    [
      rml:reference "venue.latitude" 
    ]
  ];
              
  rr:predicateObjectMap 
  [
    rr:predicate wgs84_pos:long;
    rr:objectMap 
    [
      rml:reference "venue.longitude" 
    ]
  ];
  

  rr:predicateObjectMap [
      rr:predicate geosp:onContinent;
      rr:objectMap [ rml:reference "abs(continent)" ]
     ];

  rr:predicateObjectMap [
      rr:predicate gn:countryCode;
      rr:objectMap [ rml:reference "country" ]
     ].

<#dimismapping>
rml:logicalSource [
      rml:source "../resources/rml/example-rml/Venue4.json";
      rml:referenceFormulation ql:JSONPath;
      rml:iterator "$";
    ];
    rr:subjectMap [
     rr:template "http://loc.example.com/city/{type}";
     rr:class schema:City 
    ];
rr:predicateObjectMap 
  [
    rr:predicate ogc:asGML;
    rr:objectMap 
    [
    	rr:transformation [ rr:function rrxf:asGML; rr:argumentMap [
                    rml:reference "geometry"
                ]; ];
      
    ]
  ],
  [
    rr:predicate ogc:asWKT;
    rr:objectMap 
    [
		rr:datatype ogc:wktLiteral;
    	rr:transformation [ rr:function rrxf:asWKT; rr:argumentMap [
                    rml:reference "geometry"
                ]; ];
      
    ]
  ]
  .
